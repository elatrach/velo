{% extends "base.html.twig" %}

{% block body %}


<main>

    <!-- breadcrumb section start -->
    <div class="breadcrumb-area bg-img" data-bg="assets/img/banner/page-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap">
                        <nav aria-label="breadcrumb">
                            <h2 class="breadcrumb-title">Connexion</h2>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb section end -->

    <!-- team section start -->
    <section class="team-wrapper team-wrapper--style_3 section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 order-2 order-lg-1">
                    <div class="contact-message">
                        <form id="contact-form" action="{{ path('security_login') }}" method="POST" class="contact-form">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input name="_username" placeholder="Adresse email" type="text" class="form-controle" required >
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <input name="_password" placeholder="Mot de passe" type="text" class="form-controle" required >
                                </div>
                                <div class="contact-btn ">
                                    <button type="submit" class="btn btn-all"> Connexion !</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>





